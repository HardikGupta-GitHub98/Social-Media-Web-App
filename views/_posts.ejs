<div id="post-<%=post.id%>">
	<p>
		<% if(locals.user && locals.user.id == post.user.id) { %>
		<a href="/posts/deletePost/<%= post.id%>">X</a>
		<% } %> <%= post.content %>
		<br />
		<small><%= post.user.name %></small>
		<div id="likes">
			<h2 style="color:blue" ><%= post.likes.length%> Likes</h2>
			<form action="/likes/toggle/?id=<%=post._id%>" method="post" id="<%=post.id%>-like-form">
				<button type="submit">Like Post</button>
			</form>
		</div>
	</p>

	<% if(locals.user) {%>
	<form action="/comments/addComment" method="post">
		<input type="text" name="content" id="" placeholder="Comment" />
		<input type="hidden" name="postID" value="<%=post._id%>" />
		<button type="submit" value="comment">Add</button>
	</form>
	<% } %> <%- include("_comments") -%>
</div>
